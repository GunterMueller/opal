TOPSTRUCT=Queens
NODENAME=$(TOPSTRUCT)
TOPCOM=queens
OPAL_LIBS = $(OPAL_WIN) $(OPAL_BASE) 
GENSUBSYS = $(GENSTDSYS)
SOURCES = $(SIGNS) $(IMPLS) q40s.bm
INSTALLNODEPATH = Graphics
EXAMPLESYSDEFS = SysDefs.$(TOPSTRUCT)-$(TOPCOM)
COMPONENTS = $(SOURCES) $(MANUALS) SysDefs $(EXAMPLESYSDEFS)

# The action associated with 'install' 

_install: $(SOURCES)
	@if [ -z "$(INSTALLEXAMPLESPATH)" ] ; \
	then $(ECHO) "You must define the variable INSTALLEXAMPLESPATH."; \
	else $(ECHO) "Installing $(SOURCES) in $(INSTALLEXAMPLESPATH)/$(INSTALLNODEPATH)/$(NODENAME)"; \
	$(OCSOM)/etc/xinstall $(INSTALLEXAMPLESFLAGS) $(SOURCES) \
	$(INSTALLEXAMPLESPATH)/$(INSTALLNODEPATH)/$(NODENAME) || exit 1; \
	$(ECHO) "Installing $(EXAMPLESYSDEFS) as $(INSTALLEXAMPLESPATH)/$(INSTALLNODEPATH)/$(NODENAME)/SysDefs"; \
	$(OCSOM)/etc/xinstall $(INSTALLEXAMPLESFLAGS) $(EXAMPLESYSDEFS) \
	$(INSTALLEXAMPLESPATH)/$(INSTALLNODEPATH)/$(NODENAME) || exit 1; \
	$(MV) $(INSTALLEXAMPLESPATH)/$(INSTALLNODEPATH)/$(NODENAME)/$(EXAMPLESYSDEFS) \
	$(INSTALLEXAMPLESPATH)/$(INSTALLNODEPATH)/$(NODENAME)/SysDefs; \
	fi

include $(OMLIBPATH)/GlobalRules.top.owninstall

