IMPORT	Com[data]	ONLY ans yield okay fail
			     com sequence choice
	Denotation	ONLY ++
	Seq		ONLY seq # <>
	SeqFold		ONLY /
	SeqMap		ONLY *
	Nat		ONLY nat
	NatConv		ONLY `
	Void		ONLY void


DEF `(_)(fail(Error)) == "fail(""" ++ Error ++ """)"
DEF `(``)(okay(Data)) == "okay(" ++ ``(Data) ++ ")"

DEF `(sequence(_, <>)) == "<command>"
DEF `(sequence(_, Conts)) == "(<command> ; ...) ; Cont" ++ `(#(Conts))

DEF `(choice(Alts)) == 
    (\\L, R. "(" ++ L ++ ") + (" ++ R ++ ")") / (` * Alts)

