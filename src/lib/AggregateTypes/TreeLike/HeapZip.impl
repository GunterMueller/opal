IMPORT Heap ONLY heap rep
       Tree ONLY tree
       HeapConv ONLY asHeap
       TreeZip ONLY zip unzip

DEF f zip (h1, h2) == asHeap(f zip (h1 rep, h2 rep))
DEF f unzip h == LET (t1, t2) == f unzip (h rep) IN (asHeap(t1), asHeap(t2))
