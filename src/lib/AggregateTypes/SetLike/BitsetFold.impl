IMPORT Bitset ONLY {}? excl arb
	ABORT ONLY ABORT

DEF + / S == IF S {}? THEN ABORT("/'BitsetFold applied to empty set")
	     ELSE
	     LET r == excl(arb(S), S)
	     IN	
		IF r {}? THEN arb(S)
		ELSE arb(S) + (+ / r)
		FI
             FI 
