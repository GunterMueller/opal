# --- System Architecture

OSARCH	        = @host_os@-@host_cpu@
HOST_OS         = @host_os@

# set to yes, if file names are not case sensitive
OCS_FILENAMES_CASEFOLD = @ocs_filenames_casefold@

# --- Basic system Libraries

LIBOS		= @ocs_LIBS@


# --- C compiler and Linker

# C compiler
CC	= @ocs_CC@ @ocs_DEFS@ @DEFS@ -DUSE_COMPAT_CONST @ocs_cv_flag_cc_align@ @ocs_cv_flag_cc_pic@

# C compiler modest / medium / full optimization flags
MODEST_CC	=
MEDIUM_CC	= @ocs_cv_flag_cc_opt@
FULL_CC		= @ocs_cv_flag_cc_opt@
               

# C compiler debugging / profiling flags
DEBUG_CC	= @ocs_cv_flag_cc_debug@
PROFILE_CC	= @ocs_cv_flag_cc_profile@

# The linker and its initial arguments
OCSLIBPATH = ${OCS}/lib/${OSARCH} 

LD	= @ocs_LD@

# Options  to mark dynamic/static link targets
LDSTATIC = @ocs_cv_with_ldstatic@
LDDYNAMIC = @ocs_cv_with_lddynamic@

# The flag used to include a dynamic load path in an executable.
# Will pe prefixed to the actual path.
LDRPATH	= @ocs_cv_with_ldrpath@

# The flag used to include a link load path for indirect references
# to shared objects.  Will pe prefixed to the actual path.
LDRPATHLINK	= @ocs_cv_with_ldrpathlink@

# The flag used to indicate the soname. Will be prefixed to the name
LDSONAME = @ocs_cv_with_soname@

# OS specific libraries linked by default (old fashioned)
OSLDLIBS	= ${LIBOS}
OSLDLIBPATH	=

# Linker modest / medium / full optimization flags
MODEST_LD	=
MEDIUM_LD	=
FULL_LD		=

# Linker debugging / profiling flags
DEBUG_LD	= @ocs_cv_flag_cc_debug@
PROFILE_LD	= @ocs_cv_flag_cc_profile@


# The  dynamic object linker and its initial arguments
DLD		= ${LD} @ocs_cv_flag_cc_shared@


# How to retrieve undefined objects from a .o file
NMU		= @ac_cv_path_NM@ -u 

# Archiver
AR		= @ac_cv_path_AR@
ARR		= @ac_cv_path_AR@ r
ARQ		= @ac_cv_path_AR@ q


# Ranlib
RANLIB		= @ac_cv_path_RANLIB@
UPDLIB		= @ac_cv_path_RANLIB@

# Strip
STRIP		= @ac_cv_path_STRIP@

# --- GNU make

# GNU make and its initial arguments when called from sh
XGMAKE		= @ocs_GMAKE@ -r


# --- TeX related

TEX		= @ac_cv_path_TEX@
LATEX		= @ac_cv_path_LATEX@
DVIPS		= @ac_cv_path_DVIPS@
XDVI		= @ac_cv_path_XDVI@
DVIPDFM         = @ac_cv_path_DVIPDFM@

# force TEXINPUTS to be defined (fixes a bug in dosfop)
TEXINPUTS	:= ${TEXINPUTS}


# --- Info related

TEXINDEX	= @ac_cv_path_TEXINDEX@
MAKEINFO	= @ac_cv_path_MAKEINFO@

# --- Interpreters

# perl 4 or perl 5
PERL		= @ac_cv_path_PERL@

# Tcl/Tk 
WISH		= @ac_cv_path_WISH@


# --- LEX

LEX             = @ac_cv_path_LEX@
LEXLIBS         = @ocs_cv_flag_cc_lexlib@


# --- basic UNIX tools 

# The CD <dir> command 
CD		= @ac_cv_path_CD@

# The LS command
LS		= @ac_cv_path_LS@

# The ECHO <arg> ... command 
ECHO		= @ac_cv_path_ECHO@

# The CAT command 
CAT		= @ac_cv_path_CAT@

# The DATE [ -u ] command prints the current date, optionally in
# universal format.
DATE		= @ac_cv_path_DATE@

# The MKDIR <dir> command 
MKDIR		= @ac_cv_path_MKDIR@

# The CP <f1> ... <fn> <dir> command 
CP		= @ac_cv_path_CP@

# The RM [ -r ] [ -f ] <f1> ... <fn> command 
RM		= @ac_cv_path_RM@

# The MV <old> <new> command will be only used in this way.
MV		= @ac_cv_path_MV@

# The BASENAME <pathname> <suffix> command
# removes leading path and trailing <suffix>
BASENAME	= @ac_cv_path_BASENAME@

# The SED -e "s..." ... -e "..." command; will be used only with 
# (multiple) substitution actions
SED		= @ac_cv_path_SED@

## EXPR XARGS deleted
CMP             = @ac_cv_path_CMP@

# The TAR command
TAR		= @ac_cv_path_TAR@

# The COMPRESS command
COMPRESS	= @ac_cv_path_COMPRESS@
UNCOMPRESS	= ${COMPRESS} -d
COMPRESS_SUFFIX = @ocs_cv_compress_suffix@

# The CHMOD <mode> <file> ... command; mode is system specific
CHMOD           = @ac_cv_path_CHMOD@

# The CHGRP <group> <file> ... command
CHGRP           = @ac_cv_path_CHGRP@

## only needed for sendbug
MAIL            = @ac_cv_path_MAIL@
UUENCODE        = @ac_cv_path_UUENCODE@
OCSEDITOR       = @ac_cv_path_EDITOR@

VERSION		= @PACKAGE_VERSION@


########################################################
# usually no changes need below

# --- OPAL Libraries supported in this installation

OPAL_BASE	= ${OCS}/lib/opal_base
OPAL_TCL	= ${OCS}/lib/opal_tcl
OPAL_TK		= ${OCS}/lib/opal_tk
OPAL_PARSERLIGHT = ${OCS}/lib/opal_parserlight
OPAL_READLINE	= ${OCS}/lib/opal_readline
OPAL_WIN	= ${OCS}/lib/opal_win
OPAL_JAVA	= ${OCS}/lib/opal_java
OC_SHARED	= ${OCS}/lib/oc_shared
OC_REFLECTIONS	= ${OCS}/lib/oc_reflections
OC_OC1		= ${OCS}/lib/oc_oc1
OC_OC2		= ${OCS}/lib/oc_oc2
OASYS_SHARED    = ${OCS}/lib/oasys_shared
OASYS_MAIN      = ${OCS}/lib/oasys_main
OASYS_PC        = ${OCS}/lib/oasys_pc
OASYS_PROOFLIB  = ${OCS}/lib/oasys_prooflib

SUPPORTED_OPAL_LIBS = ${OPAL_JAVA} ${OPAL_READLINE} ${OPAL_PARSERLIGHT} ${OPAL_WIN} ${OPAL_TK} ${OPAL_TCL} ${OPAL_BASE}

# default opal libs:
OPAL_LIBS	= ${OPAL_BASE}

LD_LIBRARY_PATH	:= ${OCS}/lib/${OSARCH}:${LD_LIBRARY_PATH}

# --- Default setting of OCS switches

ocs             = stdocs
opt             = no
debug           = opal
profile         = no
dldrpath	= @ocs_cv_feature_dynamic@

