#!/bin/sh
# $Id$

OCS=@prefix@
export OCS

enable_dosfop=@ocs_cv_feature_dosfop@

if [ $enable_dosfop != "yes" ]; then
    echo "Configure with --enable-dosfop and recompile." > /dev/stderr
    exit 1
fi

SHELL=/bin/sh
export SHELL

if [ -z "$OCSOM" ]
then
  OCSOM=$OCS/lib/om
  export OCSOM
fi

if [ -z "$OCSPROJECT" ]
then
  OCSPROJECT=$OCSOM/specs/empty
  export OCSPROJECT
fi

if [ -z "$DOSFOP" ]
then
  DOSFOP=$OCS/dosfop
  export DOSFOP
fi

. $OCSOM/specs/ShSpecs.basic

exec $WISH $DOSFOP/tcl/pureDosfop.tcl $*
