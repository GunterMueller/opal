#!/bin/sh
# $Header: /home/florenz/opal/home_uebb_CVS/CVS/ocs/src/oasys/scripts/archiver,v 1.1 1998-06-17 17:05:43 kd Exp $

# throw away OCS_DL_PATH 
shift

# get arguments

#echo $*

sysname="$1"; shift
syspath="$1"; shift
objs="$*"

if [ "$sysname" = "." ]
then
  sysname=opalarchive
fi

(cd $syspath
${RM} -f lib${sysname}.a 2>/dev/null || true
${ARQ} lib${sysname}.a $objs
)
