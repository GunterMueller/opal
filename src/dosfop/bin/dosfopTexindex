#!/bin/sh
# $Header: /home/florenz/opal/home_uebb_CVS/CVS/ocs/src/dosfop/bin/dosfopTexindex,v 1.5 1999-10-25 09:34:33 kd Exp $
# surrounds each call to texindex by a call to fixtexindexpre and 
# fixtexindexpost

tex_index=$TRUETEXINDEX

if [ -z "$TRUETEXINDEX" ] ; then
tex_index=texindex
fi

$PERL $DOSFOP/bin/fixtexindexpre $*
$tex_index $*
$PERL $DOSFOP/bin/fixtexindexpost $*
