IMPORT Denotation COMPLETELY
 
IMPORT DPos 	COMPLETELY
       DError 	COMPLETELY

DEF mkerror( reason, p ) == error( preamble ++ reason ++ !(p) ++ trailer )

FUN preamble : denotation
DEF preamble == "DOSFOP Parsing Error :\n"

FUN trailer : denotation
DEF trailer == "\n"