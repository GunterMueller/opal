%% This file is a modified copy of `latin1.sty'
%% Texinfo uses the commands @c and @i, so we cannot use them in the
%% definition of replacements (cedilla, and lowercase i with accents)
%% additionally, some of the ISO characters are missing in latin1
%% definitions copied from The TeXbook, p. 356
% $Id$

{
\catcode`\@=11 % letter

%% some definitions
% you may not use these characters in macro definitions
% they get expanded when written to other files and cause trouble when read
% in again, so we must provide macros for that purpose. The \implicitmath
% macro is copied from texinfo.tex

\global\let\implicitmath = $
\global\let\dcross=#

% formærly \c
\gdef\cedilla#1{\setbox0=\hbox{#1}\ifdim\ht0=1ex \accent24 #1%
\else{\ooalign{\hidewidth\char24\hidewidth\crcr\unhbox0}}\fi}
\gdef\oalign#1{\leavevmode\vtop{\baselineskip0pt \lineskip.25ex%
  \ialign{\dcross\dcross\crcr#1\crcr}}}
% formerly \i
\global\chardef\iWithoutDot=16
% there seem some difficulties with hexnumbers
\gdef\"#1{{\accent127 #1}}
\gdef\~#1{{\accent126 #1}}
\gdef\mathdecbox#1#2#3{\leavevmode\hbox{\implicitmath\m@th \mathchar#1#2#3\implicitmath}}

\gdef\S{\mathdecbox 632}
\gdef\P{\mathdecbox 635}
\gdef\AA{\leavevmode\setbox0=\hbox{h}\dimen@=\ht0 \advance\dimen@ by-1ex%
 \rlap{\raise.67\dimen@\hbox{\char 23}}A}
\gdef\aa{\accent 23 a}
\gdef\justCedilla{\noexpand\cedilla{\ }}
\gdef\bigCedilla{\noexpand\cedilla{C}}
\gdef\smallCedilla{\noexpand\cedilla{c}}

}

